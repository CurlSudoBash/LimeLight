<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="InfosTextLarge" parent="@android:style/Widget.TextView">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">#000000</item> 
    </style>
    
    <style name="InfosTextMedium" parent="@android:style/Widget.TextView">
   	  	<item name="android:textSize">23sp</item>
        <item name="android:textColor">#000000</item> 
    </style>
    
    <style name="InfosTextDescription" parent="@android:style/Widget.TextView"> 
    	<item name="android:textSize">20sp</item>
    	<item name="android:textColor">@color/stay_tuned_text_selector</item>
    	<item name="android:lineSpacingMultiplier">1.42</item>
    	<item name="android:lineSpacingExtra">@dimen/guest_space_super_stable_description_text_lineSpacingExtra</item>
    </style>
    
    <style name="InfosTextDescription.SuperStable"> 
    	<item name="android:textSize">@dimen/guest_space_super_stable_description_text_size</item>
    	<item name="android:lineSpacingExtra">@dimen/guest_space_super_stable_description_text_lineSpacingExtra</item>
    </style>
    
    <style name="GuestSpaceSwitchButton" parent="@android:style/Widget.DeviceDefault.Button">
        <item name="android:background">@drawable/bottom_button_bar_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingLeft">@dimen/guest_space_bottom_buttons_padding</item>
        <item name="android:paddingRight">@dimen/guest_space_bottom_buttons_padding</item>
        <item name="android:textSize">@dimen/guest_space_bottom_buttons_text_size</item>
    </style>  
</resources>