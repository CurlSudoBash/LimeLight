<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/page1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/guest2"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="71dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/HD_camera"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginTop="82dp" android:layout_marginLeft="89dp" style="@style/InfosTextLarge" android:layout_marginBottom="12dp" android:gravity="center_vertical" android:textSize="58sp"/>
	
	<TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:layout_alignLeft="@+id/textView3"
        android:text="foto e video di alta qualitÃ " android:layout_below="@+id/textView3" style="@style/InfosTextMedium" android:layout_marginTop="-20dp" android:textSize="39sp"/>
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="600dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/ff2_guest_space_orange_bar" android:layout_marginBottom="9dp" android:layout_marginTop="9dp"/>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="446dp"
        android:layout_height="82dp"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_below="@+id/imageView2"
        android:text="@string/hd_camera_description"
        style="@style/InfosTextDescription" android:textSize="31sp" android:gravity="center_vertical"/>

</RelativeLayout>