<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/page1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/guest4"/>

    <TextView
        android:id="@+id/textView3"
        style="@style/InfosTextMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="Salite in alto nel cielo..."
        android:textAppearance="?android:attr/textAppearanceLarge" android:layout_marginLeft="82dp" android:layout_alignParentLeft="true"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="71dp"
        android:layout_alignLeft="@+id/textView3"
        android:layout_below="@+id/textView3"
        android:text="Non si muove!" style="@style/InfosTextLarge" android:layout_marginTop="-15dp" android:textSize="58sp"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="530dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/ff2_guest_space_orange_bar" android:layout_marginTop="6dp" android:layout_marginBottom="10dp" android:layout_below="@+id/textView2"/>

    <TextView
        android:id="@+id/textView1"
        style="@style/InfosTextDescription.SuperStable"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/imageView2"
        android:text="@string/guest_super_stable_description"/>

</RelativeLayout>