<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:clickable="true"
    android:background="?android:attr/selectableItemBackground">

    <TextView
        android:id="@+id/eventName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="13dp"
        android:text="Event Name"
        android:textSize="24dp"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/location"
        android:textColor="@android:color/black"
        android:text="Event Location"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="15dp"
        android:textSize="15dp"/>

    <ImageView
        android:id="@+id/image_location"
        android:src="@drawable/marker"

        android:padding="0dp"
        android:layout_width="30dp"

        android:layout_height="30dp"

        android:scaleType="fitXY"
        android:layout_marginRight="16dp"
        android:layout_below="@+id/eventName"
        android:layout_alignStart="@+id/eventName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/area_coordinator"
        android:textColor="@android:color/black"
        android:text="Area Coordinator"
        android:layout_marginRight="20dp"
        android:textSize="15dp"
        android:layout_alignBaseline="@+id/location"
        android:layout_alignBottom="@+id/location"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/disaster_type"
        android:textColor="@android:color/black"
        android:text="Disaster Type"
        android:layout_marginRight="20dp"
        android:textSize="15dp"
        android:layout_alignBaseline="@+id/eventName"
        android:layout_alignBottom="@+id/eventName"
        android:layout_alignParentEnd="true" />

</RelativeLayout>