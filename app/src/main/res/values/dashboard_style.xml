<?xml version="1.0" encoding="utf-8"?>
<resources>
 
    <style name="dashboardLogo">
        <item name="android:height">55dp</item>
        <item name="android:scrollY">0dp</item>
    </style>

    <style name="dashboardLabelVersion">
        <item name="android:textColor">#FF000000</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="dashboardButtonBase" parent="@android:style/TextAppearance.DeviceDefault.Widget.Button">
        <item name="android:background">@drawable/dashboard_button</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:gravity">right|bottom</item>
        <item name="android:singleLine">false</item>
    </style>

    <style name="dashboardButton" parent="@style/dashboardButtonBase">
        <item name="android:textSize">24sp</item>
        <item name="android:paddingRight">3dip</item>
        <item name="android:lineSpacingExtra">@dimen/dashboard_button_line_spacing</item>
    </style>

    <style name="dashboardButton.Error">
        <item name="android:background">@drawable/dashboard_color_light</item>
        <item name="android:textSize">13sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#FF777777</item>
        <item name="android:shadowColor">#FFBBBBBB</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:padding">5dip</item>
    </style>
    
</resources>